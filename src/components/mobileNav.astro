import NavOption from './NavOption.astro'
---

<div>
    <div class="drawer flex items-center ml-6">
        <input id="my-drawer" type="checkbox" class="drawer-toggle" />
        <div class="drawer-content ">
        <label for="my-drawer" class= "drawer-button flex justify-start font-semibold  text-white text-center h-10">
            <svg viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg"><defs><style>.cls-1{fill:none;}</style></defs><title/><g data-name="Layer 2" id="Layer_2"><path d="M28,10H4A1,1,0,0,1,4,8H28a1,1,0,0,1,0,2Z"/><path d="M28,17H4a1,1,0,0,1,0-2H28a1,1,0,0,1,0,2Z"/><path d="M28,24H4a1,1,0,0,1,0-2H28a1,1,0,0,1,0,2Z"/></g><g id="frame"><rect class="cls-1" height="32" width="32"/></g></svg>
        </label>
        </div>
        <div class="drawer-side">
        <label for="my-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
        <ul class="menu p-4 w-80 min-h-full bg-blue-900 text-base-content  ">
            <li class="mt-10">
                <NavOption title='Home'  href='home' />
            </li>
            <li>
                <NavOption title='About' href='about' />
            </li>
            <li>
                <NavOption title='Contact' href='contact' />
            </li>
            <li>
                <NavOption title='Projects' href='projects' />
            </li>
        </ul>
    </div>
</div>
